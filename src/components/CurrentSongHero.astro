---
import StreamingLinks from './StreamingLinks.astro';

interface Props {
  title: string;
  artist: string;
  month: string;
  year: number;
  picker: string;
  slug: string;
  key?: string;
  coverImage?: string;
  youtubeUrl?: string;
  spotifyUrl?: string;
  appleMusicUrl?: string;
  chordsUrl?: string;
  printableUrl?: string;
}

const {
  title,
  artist,
  month,
  year,
  picker,
  slug,
  key,
  coverImage,
  youtubeUrl,
  spotifyUrl,
  appleMusicUrl,
  chordsUrl,
  printableUrl,
} = Astro.props;

const placeholderBg = 'from-amber-600 to-amber-800';
---

<section class="bg-gradient-to-b from-earth-900 to-earth-800 text-white py-16">
  <div class="max-w-6xl mx-auto px-4">
    <div class="section-header text-amber-400 mb-4">This Month's Song</div>

    <div class="flex flex-col md:flex-row gap-8 items-center md:items-start">
      <!-- Cover Art -->
      <div class="w-64 h-64 md:w-80 md:h-80 flex-shrink-0">
        <div class="aspect-square rounded-xl overflow-hidden shadow-2xl">
          {coverImage ? (
            <img
              src={coverImage}
              alt={`${title} by ${artist}`}
              class="w-full h-full object-cover"
            />
          ) : (
            <div class={`w-full h-full flex flex-col items-center justify-center p-6 bg-gradient-to-br ${placeholderBg}`}>
              <span class="text-6xl mb-4" aria-hidden="true">ðŸŽµ</span>
              <span class="font-serif text-center text-2xl font-medium leading-tight">{title}</span>
              <span class="text-lg opacity-80 mt-2">{artist}</span>
            </div>
          )}
        </div>
      </div>

      <!-- Song Info -->
      <div class="flex-grow text-center md:text-left">
        <h1 class="font-serif text-4xl md:text-5xl font-bold text-amber-400 mb-2">
          {title}
        </h1>
        <p class="text-2xl text-earth-200 mb-4">{artist}</p>

        <div class="flex flex-wrap justify-center md:justify-start gap-4 text-sm text-earth-300 mb-6">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            {month} {year}
          </span>
          {key && (
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
              </svg>
              Key of {key}
            </span>
          )}
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Picked by {picker}
          </span>
        </div>

        <div class="mb-6">
          <StreamingLinks
            youtubeUrl={youtubeUrl}
            spotifyUrl={spotifyUrl}
            appleMusicUrl={appleMusicUrl}
            chordsUrl={chordsUrl}
            printableUrl={printableUrl}
          />
        </div>

        <a
          href={`/songs/${slug}`}
          class="btn btn-primary text-lg"
        >
          View Full Song Page
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
