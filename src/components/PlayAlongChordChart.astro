---
interface Props {
  content: string;
  title: string;
  songKey?: string;
}

import ChordChart from './ChordChart.astro';

const { content, title, songKey } = Astro.props;
---

<div class="play-along-wrapper">
  <!-- Play Along Button -->
  <div class="flex items-center justify-between mb-4">
    <h2 class="font-serif text-2xl font-bold text-earth-900">Chords & Lyrics</h2>
    <button
      id="enter-play-along"
      class="flex items-center gap-2 px-4 py-2 bg-amber-600 hover:bg-amber-700 text-white rounded-lg transition-colors font-medium"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Play Along
    </button>
  </div>

  <!-- Fullscreen Container -->
  <div id="play-along-container" class="play-along-container">
    <!-- Header (visible in fullscreen) -->
    <div id="play-along-header" class="play-along-header hidden">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-serif font-bold text-white">{title}</h1>
          {songKey && <span class="text-amber-300">Key: {songKey}</span>}
        </div>
        <button
          id="exit-play-along"
          class="p-2 text-white/80 hover:text-white hover:bg-white/10 rounded-lg transition-colors"
          title="Exit Play Along (Esc)"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Scrollable Chord Content -->
    <div id="play-along-content" class="play-along-content">
      <ChordChart content={content} />
    </div>

    <!-- Control Bar (visible in fullscreen) -->
    <div id="play-along-controls" class="play-along-controls hidden">
      <div class="flex items-center justify-center gap-6">
        <!-- Play/Pause Button -->
        <button
          id="play-pause-btn"
          class="p-3 bg-amber-600 hover:bg-amber-700 text-white rounded-full transition-colors"
          title="Play/Pause (Space)"
        >
          <svg id="play-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
          </svg>
          <svg id="pause-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6"/>
          </svg>
        </button>

        <!-- Speed Control -->
        <div class="flex items-center gap-3 bg-earth-800/50 px-4 py-2 rounded-full">
          <svg class="w-4 h-4 text-earth-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <label for="speed-slider" class="text-white/80 text-sm">Speed:</label>
          <input
            type="range"
            id="speed-slider"
            min="1"
            max="10"
            value="3"
            class="w-32 accent-amber-500"
          />
          <span id="speed-value" class="text-white font-mono text-sm w-6">3</span>
        </div>

        <!-- Restart Button -->
        <button
          id="restart-btn"
          class="p-2 text-white/80 hover:text-white hover:bg-white/10 rounded-lg transition-colors"
          title="Restart (R)"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  .play-along-container {
    @apply relative bg-amber-50 rounded-lg;
  }

  .play-along-container:fullscreen,
  .play-along-container:-webkit-full-screen {
    @apply bg-earth-900 flex flex-col;
    padding: 0;
  }

  .play-along-header {
    @apply sticky top-0 z-10 px-6 py-4 bg-earth-900/95 backdrop-blur border-b border-earth-700;
  }

  .play-along-container:fullscreen .play-along-header,
  .play-along-container:-webkit-full-screen .play-along-header {
    @apply block;
  }

  .play-along-content {
    @apply p-6 overflow-auto;
  }

  .play-along-container:fullscreen .play-along-content,
  .play-along-container:-webkit-full-screen .play-along-content {
    @apply flex-1 px-8 py-6;
    scroll-behavior: smooth;
  }

  .play-along-container:fullscreen .play-along-content :global(.chord-chart),
  .play-along-container:-webkit-full-screen .play-along-content :global(.chord-chart) {
    @apply max-w-3xl mx-auto text-lg;
  }

  .play-along-container:fullscreen .play-along-content :global(.chordpro-chord),
  .play-along-container:-webkit-full-screen .play-along-content :global(.chordpro-chord) {
    @apply text-amber-400 text-xl;
  }

  .play-along-container:fullscreen .play-along-content :global(.chordpro-lyrics),
  .play-along-container:-webkit-full-screen .play-along-content :global(.chordpro-lyrics) {
    @apply text-white text-xl;
  }

  .play-along-container:fullscreen .play-along-content :global(.chordpro-section),
  .play-along-container:-webkit-full-screen .play-along-content :global(.chordpro-section) {
    @apply text-amber-500 text-lg font-bold;
  }

  .play-along-controls {
    @apply sticky bottom-0 z-10 px-6 py-4 bg-earth-900/95 backdrop-blur border-t border-earth-700;
  }

  .play-along-container:fullscreen .play-along-controls,
  .play-along-container:-webkit-full-screen .play-along-controls {
    @apply block;
  }

  /* Scrollbar styling in fullscreen */
  .play-along-container:fullscreen .play-along-content::-webkit-scrollbar,
  .play-along-container:-webkit-full-screen .play-along-content::-webkit-scrollbar {
    width: 8px;
  }

  .play-along-container:fullscreen .play-along-content::-webkit-scrollbar-track,
  .play-along-container:-webkit-full-screen .play-along-content::-webkit-scrollbar-track {
    @apply bg-earth-800;
  }

  .play-along-container:fullscreen .play-along-content::-webkit-scrollbar-thumb,
  .play-along-container:-webkit-full-screen .play-along-content::-webkit-scrollbar-thumb {
    @apply bg-earth-600 rounded;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('play-along-container');
    const content = document.getElementById('play-along-content');
    const header = document.getElementById('play-along-header');
    const controls = document.getElementById('play-along-controls');
    const enterBtn = document.getElementById('enter-play-along');
    const exitBtn = document.getElementById('exit-play-along');
    const playPauseBtn = document.getElementById('play-pause-btn');
    const playIcon = document.getElementById('play-icon');
    const pauseIcon = document.getElementById('pause-icon');
    const speedSlider = document.getElementById('speed-slider') as HTMLInputElement;
    const speedValue = document.getElementById('speed-value');
    const restartBtn = document.getElementById('restart-btn');

    let isPlaying = false;
    let scrollInterval: number | null = null;
    let speed = 3;
    let scrollAccumulator = 0;

    // Speed mapping: slider value (1-10) to pixels per 50ms
    function getScrollSpeed(sliderValue: number): number {
      return 0.2 + (sliderValue - 1) * 0.3;
    }

    function startScrolling() {
      if (scrollInterval) return;

      isPlaying = true;
      scrollAccumulator = 0;
      playIcon?.classList.add('hidden');
      pauseIcon?.classList.remove('hidden');

      scrollInterval = window.setInterval(() => {
        if (content) {
          // Accumulate fractional scroll amounts
          scrollAccumulator += getScrollSpeed(speed);

          // Only scroll when we have at least 1 pixel
          if (scrollAccumulator >= 1) {
            const pixelsToScroll = Math.floor(scrollAccumulator);
            content.scrollTop += pixelsToScroll;
            scrollAccumulator -= pixelsToScroll;
          }

          // Stop at the end
          if (content.scrollTop + content.clientHeight >= content.scrollHeight) {
            stopScrolling();
          }
        }
      }, 50);
    }

    function stopScrolling() {
      isPlaying = false;
      playIcon?.classList.remove('hidden');
      pauseIcon?.classList.add('hidden');

      if (scrollInterval) {
        clearInterval(scrollInterval);
        scrollInterval = null;
      }
    }

    function togglePlayPause() {
      if (isPlaying) {
        stopScrolling();
      } else {
        startScrolling();
      }
    }

    function enterFullscreen() {
      if (container?.requestFullscreen) {
        container.requestFullscreen();
      } else if ((container as any)?.webkitRequestFullscreen) {
        (container as any).webkitRequestFullscreen();
      }
    }

    function exitFullscreen() {
      if (document.exitFullscreen) {
        document.exitFullscreen();
      } else if ((document as any).webkitExitFullscreen) {
        (document as any).webkitExitFullscreen();
      }
    }

    function handleFullscreenChange() {
      const isFullscreen = document.fullscreenElement === container ||
                           (document as any).webkitFullscreenElement === container;

      if (isFullscreen) {
        header?.classList.remove('hidden');
        controls?.classList.remove('hidden');
      } else {
        header?.classList.add('hidden');
        controls?.classList.add('hidden');
        stopScrolling();
        if (content) content.scrollTop = 0;
      }
    }

    // Event listeners
    enterBtn?.addEventListener('click', enterFullscreen);
    exitBtn?.addEventListener('click', exitFullscreen);
    playPauseBtn?.addEventListener('click', togglePlayPause);

    restartBtn?.addEventListener('click', () => {
      if (content) content.scrollTop = 0;
      stopScrolling();
    });

    speedSlider?.addEventListener('input', (e) => {
      speed = parseInt((e.target as HTMLInputElement).value);
      if (speedValue) speedValue.textContent = speed.toString();
    });

    document.addEventListener('fullscreenchange', handleFullscreenChange);
    document.addEventListener('webkitfullscreenchange', handleFullscreenChange);

    // Keyboard shortcuts
    document.addEventListener('keydown', (e) => {
      const isFullscreen = document.fullscreenElement === container ||
                           (document as any).webkitFullscreenElement === container;

      if (!isFullscreen) return;

      switch (e.key) {
        case ' ':
          e.preventDefault();
          togglePlayPause();
          break;
        case 'Escape':
          stopScrolling();
          break;
        case 'r':
        case 'R':
          if (content) content.scrollTop = 0;
          stopScrolling();
          break;
        case 'ArrowUp':
          e.preventDefault();
          speed = Math.min(10, speed + 1);
          if (speedSlider) speedSlider.value = speed.toString();
          if (speedValue) speedValue.textContent = speed.toString();
          break;
        case 'ArrowDown':
          e.preventDefault();
          speed = Math.max(1, speed - 1);
          if (speedSlider) speedSlider.value = speed.toString();
          if (speedValue) speedValue.textContent = speed.toString();
          break;
      }
    });
  });
</script>
