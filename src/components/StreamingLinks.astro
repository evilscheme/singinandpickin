  {chordsUrl && (
    <a
      href={chordsUrl}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[btnClass, "group"]}
    >
      <svg class="w-5 h-5 text-amber-600 group-hover:text-amber-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M9 18V5l12-2v13"/>
        <circle cx="6" cy="18" r="3"/>
        <circle cx="18" cy="16" r="3"/>
      </svg>
      <span>Chords</span>
    </a>
  )}

  {printableUrl && (
    <a
      href={printableUrl}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[btnClass, "group"]}
    >
      <svg class="w-5 h-5 text-earth-600 group-hover:text-earth-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="6 9 6 2 18 2 18 9"/>
        <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"/>
        <rect x="6" y="14" width="12" height="8"/>
      </svg>
      <span>Printable</span>
    </a>
  )}
</div>
