---
interface Props {
  youtubeUrl?: string;
  spotifyUrl?: string;
  appleMusicUrl?: string;
  chordsUrl?: string;
  printableUrl?: string;
  dark?: boolean;
}

const { youtubeUrl, spotifyUrl, appleMusicUrl, chordsUrl, printableUrl, dark = false } = Astro.props;

const btnClass = dark
  ? "btn bg-white/10 border-2 border-white/30 text-white hover:bg-white/20 hover:border-white/50"
  : "btn btn-outline";
---

<div class="flex flex-wrap gap-3">
  {youtubeUrl && (
    <a
      href={youtubeUrl}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[btnClass, "group"]}
    >
      <svg class="w-5 h-5 text-red-600 group-hover:text-red-700" viewBox="0 0 24 24" fill="currentColor">
        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
      </svg>
      <span>YouTube</span>
    </a>
  )}

  {spotifyUrl && (
    <a
      href={spotifyUrl}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[btnClass, "group"]}
    >
      <svg class="w-5 h-5 text-green-600 group-hover:text-green-700" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
      </svg>
      <span>Spotify</span>
    </a>
  )}

  {appleMusicUrl && (
    <a
      href={appleMusicUrl}
      target="_blank"
      rel="noopener noreferrer"
      class:list={[btnClass, "group"]}
    >
      <svg class="w-5 h-5 text-pink-600 group-hover:text-pink-700" viewBox="0 0 24 24" fill="currentColor">
        <path d="M23.994 6.124a9.23 9.23 0 00-.24-2.19c-.317-1.31-1.062-2.31-2.18-3.043a5.022 5.022 0 00-1.877-.726 10.496 10.496 0 00-1.564-.15c-.04-.003-.083-.01-.124-.013H5.986c-.152.01-.303.017-.455.026-.747.043-1.49.123-2.193.364-1.29.442-2.297 1.23-2.97 2.418-.368.652-.58 1.357-.678 2.097-.063.477-.098.96-.098 1.442v11.15c.006.32.012.641.044.957.063.62.165 1.23.382 1.81a5.11 5.11 0 001.87 2.37c.645.473 1.373.785 2.163.926.495.088.998.123 1.5.14.35.012.702.015 1.052.015h11.97c.388-.007.775-.024 1.16-.063.697-.07 1.378-.206 2.023-.466a5.084 5.084 0 002.592-2.396c.37-.725.575-1.506.65-2.318.044-.47.063-.943.067-1.415V6.338c-.01-.07-.015-.14-.02-.214zm-6.628 3.607c-.003.064-.003.128-.006.192v7.872c-.002.296-.013.59-.064.88-.093.532-.33.993-.763 1.315-.33.25-.713.373-1.12.435-.484.074-.97.043-1.446-.077-.71-.18-1.26-.572-1.58-1.234-.3-.618-.33-1.266-.14-1.916.2-.688.623-1.193 1.237-1.52.452-.24.942-.355 1.447-.413.36-.04.723-.05 1.085-.065.163-.006.325-.017.488-.02.06-.002.084-.024.084-.084V9.844c0-.07-.01-.14-.026-.206-.025-.108-.093-.17-.2-.183a.785.785 0 00-.162-.004l-6.058.82c-.063.008-.126.02-.188.032-.103.02-.158.087-.17.19-.006.046-.01.094-.01.14v9.368c-.002.296-.012.59-.063.883-.094.533-.33.993-.76 1.317-.33.25-.71.374-1.118.436-.484.074-.97.043-1.446-.076-.71-.18-1.26-.574-1.58-1.235-.3-.62-.33-1.267-.14-1.917.198-.69.622-1.195 1.237-1.52.453-.24.94-.356 1.446-.414.36-.04.722-.05 1.085-.065.163-.006.325-.017.488-.02.06-.002.083-.024.083-.084V7.77c0-.08.006-.162.018-.242.03-.216.164-.34.377-.38.09-.015.18-.026.268-.037l7.616-1.033c.11-.015.223-.027.335-.03.172-.005.28.087.31.257.012.064.018.13.018.196v3.43z"/>
