---
import BaseLayout from '../../layouts/BaseLayout.astro';
import YouTubeEmbed from '../../components/YouTubeEmbed.astro';
import ChordChart from '../../components/ChordChart.astro';
import StreamingLinks from '../../components/StreamingLinks.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const carols = await getCollection('holiday-carols');

  return carols.map((carol) => ({
    params: { slug: carol.slug },
    props: { carol },
  }));
}

interface Props {
  carol: Awaited<ReturnType<typeof getCollection<'holiday-carols'>>>[number];
}

const { carol } = Astro.props;
const { Content } = await carol.render();

// Get all carols for prev/next navigation
const allCarols = await getCollection('holiday-carols');
const sortedCarols = allCarols.sort((a, b) => {
  if (a.data.order && b.data.order) return a.data.order - b.data.order;
  return a.data.title.localeCompare(b.data.title);
});
const currentIndex = sortedCarols.findIndex((c) => c.slug === carol.slug);
const prevCarol = sortedCarols[currentIndex - 1];
const nextCarol = sortedCarols[currentIndex + 1];

const placeholderBg = 'from-sage-600 to-sage-800';
---

<BaseLayout title={carol.data.title}>
  <article class="max-w-4xl mx-auto px-4 py-12">
    <!-- Header -->
    <header class="mb-12">
      <nav class="text-sm text-earth-500 mb-6">
        <a href="/holiday-carols" class="hover:text-amber-600">Holiday Carols</a>
        <span class="mx-2">/</span>
        <span class="text-earth-700">{carol.data.title}</span>
      </nav>

      <div class="flex flex-col md:flex-row gap-8">
        <!-- Cover Art -->
        <div class="w-48 h-48 md:w-64 md:h-64 flex-shrink-0 mx-auto md:mx-0">
          <div class="aspect-square rounded-xl overflow-hidden shadow-xl">
            {carol.data.coverImage ? (
              <img
                src={carol.data.coverImage}
                alt={carol.data.title}
                class="w-full h-full object-cover"
              />
            ) : (
              <div class={`w-full h-full flex flex-col items-center justify-center p-4 text-white bg-gradient-to-br ${placeholderBg}`}>
                <span class="text-5xl mb-2" aria-hidden="true">üéÑ</span>
                <span class="font-serif text-center text-xl font-medium leading-tight">{carol.data.title}</span>
              </div>
            )}
          </div>
        </div>

        <!-- Carol Info -->
        <div class="flex-grow text-center md:text-left">
          <h1 class="font-serif text-4xl font-bold text-earth-900 mb-2">
            {carol.data.title}
          </h1>
          {carol.data.artist && (
            <p class="text-2xl text-earth-600 mb-4">{carol.data.artist}</p>
          )}

          {carol.data.key && (
            <dl class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm mb-6">
              <div>
                <dt class="section-header">Key</dt>
                <dd class="text-earth-800 font-medium">{carol.data.key}</dd>
              </div>
            </dl>
          )}

          <StreamingLinks
            youtubeUrl={carol.data.youtubeUrl}
            chordsUrl={carol.data.chordsUrl}
            printableUrl={carol.data.printableUrl}
          />
        </div>
      </div>
    </header>

    <!-- YouTube Embed -->
    {carol.data.youtubeUrl && (
      <section class="mb-12">
        <h2 class="font-serif text-2xl font-bold text-earth-900 mb-4">Listen</h2>
        <YouTubeEmbed url={carol.data.youtubeUrl} title={carol.data.title} />
      </section>
    )}

    <!-- Chord Chart / Content -->
    {carol.body && carol.body.trim() && (
      <section class="mb-12">
        <h2 class="font-serif text-2xl font-bold text-earth-900 mb-4">Chords & Lyrics</h2>
        <ChordChart content={carol.body} />

        <!-- Notes rendered from markdown -->
        <div class="prose prose-earth mt-6">
          <Content />
        </div>
      </section>
    )}

    <!-- Prev/Next Navigation -->
    <nav class="border-t border-earth-200 pt-8 mt-12">
      <div class="flex justify-between">
        {prevCarol ? (
          <a
            href={`/holiday-carols/${prevCarol.slug}`}
            class="flex items-center gap-3 text-earth-600 hover:text-amber-700 group"
          >
            <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <div class="text-left">
              <div class="text-xs text-earth-400">Previous</div>
              <div class="font-medium">{prevCarol.data.title}</div>
            </div>
          </a>
        ) : (
          <div></div>
        )}

        {nextCarol ? (
          <a
            href={`/holiday-carols/${nextCarol.slug}`}
            class="flex items-center gap-3 text-earth-600 hover:text-amber-700 group"
          >
            <div class="text-right">
              <div class="text-xs text-earth-400">Next</div>
              <div class="font-medium">{nextCarol.data.title}</div>
            </div>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        ) : (
          <div></div>
        )}
      </div>
    </nav>

    <div class="text-center mt-8">
      <a href="/holiday-carols" class="text-amber-700 hover:text-amber-800 font-medium">
        ‚Üê Back to all Holiday Carols
      </a>
    </div>
  </article>
</BaseLayout>
